<table class="goods-table">
  <thead>
    <th>Товар</th>
    <th>Цена</th>
    <th>В наличии?</th>
    <th></th>
  </thead>
  <tbody>
    <% @goods.each do |good| %>
      <tr>
        <td><%= good.name %></td>
        <td><%= good.price %></td>
        <td><%= good.available? %></td>
        <td><%= OnlineCart.has_good?(good) ? link_to("В корзине", cart_path) : link_to("Добавить в корзину", cart_path(good.id), mathod: 'POST') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
